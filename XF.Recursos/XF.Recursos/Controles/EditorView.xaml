<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.Recursos.Controles.EditorView">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White" Padding="10,10,10,10">
            <Label Text="Editor" Font="Bold, Large" TextColor="Black" />
            <Editor x:Name="edtDescricao" HorizontalOptions="FillAndExpand"
			 	    VerticalOptions="FillAndExpand" BackgroundColor="Silver">
            </Editor>
            <Button x:Name="btnEnviar" Text="Enviar" 
                        Clicked="btnEnviar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>