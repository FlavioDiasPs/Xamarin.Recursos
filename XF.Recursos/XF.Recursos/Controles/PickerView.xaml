<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.Recursos.Controles.PickerView">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Data do evento" />
                <DatePicker x:Name="dtpData" 
                            Format="dd-MM-yyyy" />
                <Label Text="Horário" />
                <TimePicker x:Name="tmpHorario" 
                            Format="hh:mm tt" />
                <Button Text="Enviar" Clicked="Button_Clicked"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>