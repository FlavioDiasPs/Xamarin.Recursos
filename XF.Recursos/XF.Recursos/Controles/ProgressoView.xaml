<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.Recursos.Controles.ProgressoView">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="ActivityIndicator" VerticalOptions="Center" />
                <ActivityIndicator x:Name="indProgresso" VerticalOptions="Center"/>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Button x:Name="btnIndIniciar" Text="Start"
                            Clicked="IsIndicador_Clicked" WidthRequest="210" />
                </StackLayout>
            </StackLayout>

            <StackLayout>
                <Label Text="ProgressBar" VerticalOptions="Center" />
                <ProgressBar x:Name="pgrProgresso" VerticalOptions="Center"/>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Button x:Name="btnPrgIniciar" Text="Start"
                            Clicked="IsProgresso_Clicked" WidthRequest="100" />
                    <Button x:Name="btnPrgParar" Text="Stop"
                            Clicked="IsProgressoStop_Clicked" WidthRequest="100" />
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>